<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:padding="10dip"
    tools:context="com.soto.nexxis.Reser" >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#30ffffff"
      android:orientation="horizontal"
      android:padding="8dip"
       android:layout_marginTop="10dp"
 >

      <ImageView
          android:id="@+id/imageView1"
          android:layout_width="100dp"
          android:layout_height="90dp"
          android:src="@drawable/auditorio" />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingLeft="18dip"
           >

      <TextView
          android:id="@+id/resultado"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="2dp"
          android:layout_weight="0.1"
          android:text="AUDITORIO"
          android:textColor="#ffffff"
          android:textSize="22sp" />

      <Button
          android:id="@+id/button1"
          android:layout_width="150dip"
         android:layout_height="50dip"
          android:layout_marginTop="10dp"
           android:textColor="#fff"
          android:layout_weight="0.1"
          android:background="@drawable/edittext_rounded_corners"
          android:text="RESERVA YA" 
          android:gravity="center"/>

  </LinearLayout>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#30ffffff"
      android:orientation="horizontal"
      android:padding="8dip"
      android:layout_marginTop="6dp"
 >

      <ImageView
          android:id="@+id/imageView2"
          android:layout_width="100dp"
          android:layout_height="90dp"
          android:src="@drawable/compu" />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingLeft="18dip"
           >

      <TextView
          android:id="@+id/textView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="2dp"
          android:layout_weight="0.1"
          android:text="COMPUTADORES"
          android:textColor="#ffffff"
          android:textSize="18sp" />

      <Button
          android:id="@+id/button2"
          android:layout_width="150dip"
         android:layout_height="50dip"
          android:layout_marginTop="10dp"
           android:textColor="#fff"
          android:layout_weight="0.1"
          android:background="@drawable/edittext_rounded_corners"
          android:text="RESERVA YA" 
          android:gravity="center"/>

  </LinearLayout>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#30ffffff"
      android:orientation="horizontal"
      android:padding="8dip"
       android:layout_marginTop="6dp"
 >

      <ImageView
          android:id="@+id/imageView3"
          android:layout_width="100dp"
          android:layout_height="90dp"
          android:src="@drawable/laboratorio" />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingLeft="18dip"
           >

      <TextView
          android:id="@+id/textView3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="2dp"
          android:layout_weight="0.1"
          android:text="LABORAOTRIO"
          android:textColor="#ffffff"
          android:textSize="22sp" />

      <Button
          android:id="@+id/button3"
          android:layout_width="150dip"
         android:layout_height="50dip"
          android:layout_marginTop="10dp"
           android:textColor="#fff"
          android:layout_weight="0.1"
          android:background="@drawable/edittext_rounded_corners"
          android:text="RESERVA YA" 
          android:gravity="center"/>

  </LinearLayout>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#30ffffff"
      android:orientation="horizontal"
      android:padding="8dip"
       android:layout_marginTop="6dp"
 >

      <ImageView
          android:id="@+id/imageView4"
          android:layout_width="100dp"
          android:layout_height="90dp"
          android:src="@drawable/svideo" />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingLeft="18dip"
           >

      <TextView
          android:id="@+id/textView4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="2dp"
          android:layout_weight="0.1"
          android:text="VIDEO"
          android:textColor="#ffffff"
          android:textSize="20sp" />

      <Button
          android:id="@+id/button4"
          android:layout_width="150dip"
         android:layout_height="50dip"
          android:layout_marginTop="10dp"
           android:textColor="#fff"
          android:layout_weight="0.1"
          android:background="@drawable/edittext_rounded_corners"
          android:text="RESERVA YA" 
          android:gravity="center"/>

  </LinearLayout>
  </LinearLayout>





       
        

</LinearLayout>
